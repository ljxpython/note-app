# NoteAI 环境变量配置示例
# 复制此文件为 .env 并修改相应值

# ==================== 应用配置 ====================
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0

# ==================== 数据库配置 ====================
DATABASE_PATH=./noteai.db
DATABASE_DEBUG=false

# ==================== JWT认证配置 ====================
# 生产环境请使用强随机密钥
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== AI服务配置 ====================
# DeepSeek API密钥 (可选，不设置将使用模拟模式)
DEEPSEEK_API_KEY=

# AI配额限制
AI_QUOTA_DAILY_LIMIT=50
AI_QUOTA_MONTHLY_LIMIT=1000

# ==================== 服务端口配置 ====================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ==================== 前端配置 ====================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# ==================== 安全配置 ====================
# CORS允许的域名
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# 速率限制
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/noteai.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ==================== 监控配置 ====================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==================== 邮件配置 (可选) ====================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@noteai.com

# ==================== 文件上传配置 ====================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,md

# ==================== 缓存配置 ====================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ==================== 生产环境配置 ====================
# 生产环境特有配置
PRODUCTION_DB_URL=
PRODUCTION_SECRET_KEY=
PRODUCTION_CORS_ORIGINS=https://yourdomain.com
